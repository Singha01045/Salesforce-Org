<apex:page controller="JSController_3" standardStylesheets="false">
    <html ng-app="app">
        <head>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"/>
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
        </head>
        <body ng-controller="myCtrl">
            <div style="margin:2%" >
            <input type="text" placeholder="Enter First Name" class="form-control"  ng-model="FName"/>
            <input type="text" placeholder="Enter Last Name" class="form-control"  ng-model="LName"/>
            <input type="text" placeholder="Enter Phone No" class="form-control" ng-model="Phn"/>
            <input type="text" placeholder="Enter Email" class="form-control"  ng-model="Email"/>
            <button type="button" ng-click="createContact()" class="btn btn-primary">Submit</button><br/>
            </div>
            <div style="margin:2%">
            <table class="table-bordered table-striped" style="padding:2%">
                <thead>
                    <th>Id</th>
                    <th>Name</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Phone No</th>
                    <th>Email</th>
                </thead>
                <tr ng-repeat="eachContact in getContactList">
                <td>{{ eachContact.Id }}</td>
                <td>{{ eachContact.Name }}</td>
                <td>{{ eachContact.FirstName }}</td>
                <td>{{ eachContact.LastName }}</td>
                <td>{{ eachContact.Phone }}</td>    
                <td>{{ eachContact.Email }}</td>
                </tr>
            </table>
            </div>    
        </body>    
        <script>
        var app = angular.module('app', []);
        app.controller('myCtrl', function ($scope) 
        {
            $scope.getContactList=[];
            $scope.FName = '';
            $scope.LName = '';
            $scope.Phn = '';
            $scope.Email='';
            
            $scope.getContactListJS = function()
            {
                Visualforce.remoting.Manager.invokeAction('{!$RemoteAction.JSController_3.fetchAllContacts}', 
                function(result, event)
                {
                   if (event.status) {
                       $scope.getContactList = result;
                       $scope.$apply();
                   } 
                   else if (event.type === 'exception') {  } 
                   else { }
                }, {escape: true}
                );
            }
            $scope.getContactListJS();
            $scope.createContact = function()
            {
                Visualforce.remoting.Manager.invokeAction('{!$RemoteAction.JSController_3.createContact}', 
                $scope.FName, $scope.LName, $scope.Email,$scope.Phn,
                function(result, event)
                {
                   if (event.status) {
                       $scope.getContactList.push(result);
                       $scope.$apply();
                   } 
                   else if (event.type === 'exception') {  } 
                   else { }
                }, {escape: true}
                );
            }   
        });
        </script>
    </html>
</apex:page>