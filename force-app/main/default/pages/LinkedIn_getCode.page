<apex:page controller="LinkedIn_SF_Controller" >
    <apex:form >
        <apex:pageBlock title="Authorization">
            <apex:pageBlockButtons location="top">
                <apex:commandButton value="RequestCode" action="{!requestCode}"></apex:commandButton>
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Client Id"/>
                    <apex:inputText value="{!clientId}" size="100"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="State"/>
                    <apex:inputText value="{!state}" size="100"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Redirect Url"/>
                    <apex:inputText value="{!redirectUrl}" size="100"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
