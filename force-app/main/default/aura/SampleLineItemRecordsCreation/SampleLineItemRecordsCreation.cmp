<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader" 
                access="global" controller="SampleLineItemCreation_UI">
    
    <aura:html tag="style">
        .slds-modal__container{
        max-width: 80rem !important;
        width:120% !important;
        }
        
    </aura:html>
    
    <aura:html tag="style">
        .cuf-content {
        padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        padding: 0rem !important;
        }       
        .slds-modal__content{
        overflow-y:hidden !important;
        height:unset !important;
        max-height:unset !important;
        }
    </aura:html>
    
    
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="recordTypeIds" type="string" />
    <aura:attribute name="Message" type="string" />
    <aura:attribute name="SampleLineItemList" type="List" default="[{'record':{
                                                                   'sobjectType': 'Sample_Line_Item__c',
                                                                   'Product__c': '',
                                                                   'Sample__c': '',
                                                                   'Quantity__c': '',
                                                                   'Qunatity_Unit__c': '',
                                                                   'Packaging_Quantity__c': '',
                                                                   'Packaging_Unit__c': '',
                                                                   'Current_Shelf_Life__c': '',
                                                                   'Expected_Shelf_Life__c': ''
                                                                   },'lookupObj':{}}]"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.loadOptions}" />
    <aura:attribute name="options" type="List" />
    <aura:attribute name="SamplelineItemSize" type="Integer" />
    
    <div class="modal-header slds-modal__header slds-size_1-of-1">
        <h4 class="title slds-text-heading--medium">Create Sample Line Items</h4>
    </div>
    
    <div class="slds-m-around_x-small slds-modal_large" style="z-index: 1;">
        
        <div class="container-fluid ">
            
            <table class="slds-table slds-table_bordered slds-table_cell-buffer">
                
                <thead >
                    <tr class="slds-text-title_caps" >
                        <th scope="col">
                            <div class="slds-truncate" >#</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate">Product</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Quantity</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Quantity Unit</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Packaging Quantity</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Packaging Unit</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Current Shelf Life</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Expected Shelf Life</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" >Delete</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration items="{!v.SampleLineItemList}" var="SLI" indexVar="index">
                        <tr>
                            <td> 
                                {!index + 1}
                            </td>
                            <td > 
                                <c:ProductCustomLookUp objectAPIName="Product2" IconName="standard:product2" SearchKeyWord="{!SLI.record.Product_Name__c}" parentId="{!index}" mainList="{!v.SampleLineItemList}" label="Select Product" />
                            </td>
                            <td>
                                <lightning:input name="Quantity" type="number" label="Quantity" value="{!SLI.record.Quantity__c}" required="true"/>
                            </td>
                            <td>
                                <!-- <lightning:input name="Qunatity Unit" type="text" label="Quanity Unit" value="{!SLI.record.Qunatity_Unit__c}" /> -->
                                <lightning:select name="mySelect" label="Select Quantity Unit:" aura:id="mySelect" value="{!SLI.record.Qunatity_Unit__c}" required="true">
                                    <aura:iteration items="{!v.options}" var="item">
                                        <option text="{!item.label}" value="{!item.value}" selected="{!item.selected}"/>
                                    </aura:iteration>
                                </lightning:select>
                            </td>
                            <td>
                                <lightning:input name="Packaging Quantity" type="number" label="Packaging Quantity" value="{!SLI.record.Packaging_Quantity__c}" required="true"/>
                            </td>
                            <td>
                                <lightning:select name="mySelect" label="Select Packaging Quantity Unit:" aura:id="mySelect" value="{!SLI.record.Packaging_Unit__c}" required="true">
                                    <aura:iteration items="{!v.options}" var="item">
                                        <option text="{!item.label}" value="{!item.value}" selected="{!item.selected}"/>
                                    </aura:iteration>
                                </lightning:select>
                            </td>
                            <td>
                                <lightning:input name="Current Shelf Life" type="Text" label="Current Shelf Life" value="{!SLI.record.Current_Shelf_Life__c}" required="true"/>
                            </td>
                            <td>
                                <lightning:input name="Expected Shelf Life" type="Text" label="Expected Shelf Life" value="{!SLI.record.Expected_Shelf_Life__c}" required="true"/>
                            </td>
                            <td>
                                <a onclick="{!c.removeRow}" data-record="{!index}" data-index="{!SLI.record.Id}">
                                    <lightning:icon iconName="utility:delete" size="medium" alternativeText="Delete"/>
                                    <span class="slds-assistive-text">Delete</span>
                                </a>
                            </td> 
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
            
        </div>
        
    </div>
    
    <div style="z-index: -1;">
        <div role="contentinfo"  class="slds-p-around_large slds-align_absolute-center">
            <lightning:button label="Add Row" title="Add Row" onclick="{! c.addRow }" class="marginTop"/>
        </div>
        <div class="modal-footer slds-modal__footer slds-size_1-of-1">
            <lightning:button label="Save" title="Save" onclick="{! c.SaveSampleDetails }" class="marginTop"/>
            <lightning:button label="Cancel" title="Cancel" onclick="{! c.CloseQuickAction }" class="marginTop"/>
            
        </div>
        
    </div>
</aura:component>