<aura:component controller="Helper" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	<aura:attribute name="conRecord" type="Object"/>
    <aura:attribute name="recordLoadError" type="String"/>
    
    <force:recordData aura:id="recordLoader"
    recordId="{!v.recordId}"
    fields="FirstName"
    targetFields="{!v.conRecord}"
    targetError="{!v.recordLoadError}"
    />
    
    
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="loading" type="Boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <lightning:notificationsLibrary aura:id="notifLib"/>
    <lightning:messages aura:id="errorMessage" />
    <lightning:recordForm aura:id="recordForm"
                          objectApiName="Contact"
                          layoutType="Full"
                          columns="2"
                          onsuccess="{!c.handleSuccess}"
                          onerror="{!c.handleError}"
                          onsubmit="{!c.handleSubmit}"
                          onload="{!c.handleLoad}"
                          /> 
    <lightning:inputField fieldName="FirstName" value="{!v.conRecord.FirstName}"/>
    <aura:if isTrue="{!v.loading}">
            <lightning:spinner alternativeText="Loading"/>
        </aura:if>
</aura:component>