<aura:component controller="AuraController" >
    <!-- ================= LC Without Attributes ================= 
    ********AURA ID********
    <br/>
    <div>
    <b>CALCULATOR EXAMPLE: </b>
    </div>
    <div>
        <div><ui:inputNumber label='FIRST NUMBER' aura:id='fnum'/></div><br />
        <div><ui:inputNumber label='SECOND NUMBER' aura:id='snum'/></div><br/> 
