<aura:component >
    <aura:attribute name="incomes" type="object"/>
    <aura:attribute name="myColumns" type="List"/>
    <aura:registerEvent name="totalIncomeComponentEvent" type="c:LightningComponentEvent"></aura:registerEvent> <!--Registering for the Event-->
    <aura:handler name="totalIncomeComponentEvent" event="c.LightningComponentEvent" action="{!c.handleOwnEvent}" phase="capture"/> <!--event handler-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>  <!--Initializes the data in our LC or Handler automatically fires the doInit Function when the LC is loaded-->
    
    <lightning:card title="INCOME CALCULATOR" iconName="action:new_note" >
        <aura:set attribute="actions">
            <lightning:button label="Show/Hide Income Form" onclick="{!c.toggleIncomeForm}"></lightning:button>
        </aura:set>
        <p class="slds-p-horizontal_small">
            <div aura:id="incomeForm" class="hide">
                <lightning:input aura:id="source" name="source" required="true" label="Income Source"></lightning:input>
                <lightning:input aura:id="amount" name="amount" required="true" label="Amount"></lightning:input><br/>
                <lightning:button name="addIncome" label="ADD INCOME" onclick="{!c.addIncome}" variant="brand"></lightning:button>
            </div><br/>
            <lightning:datatable data="{! v.incomes }" columns="{! v.myColumns }" keyField="sno" />  
            <br/>
            <lightning:button name="calculateIncome" label="CALCULATE INCOME" onclick="{!c.fireOwnEvent}" variant="brand" > </lightning:button> <!-- On click of this button, event function will fired and calculates the total income and pass it to the Parent Component -->
        </p>
    </lightning:card> 
</aura:component>