<aura:component controller="AuraController" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSobjectName" access="global" >
    <aura:attribute name="ContactList" type="contact[]"/>
    <aura:attribute name="columns" type="List"/>
    <aura:handler event="c:SearchBarEvent" action="{!c.searchContact}"/>
    
    <!--<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>    When we call server-side/client-side controller method at the tym of intialization, we use it -->
    
    <lightning:button onclick="{!c.fireOwnEvent}" label="Related Contacts" iconName="standard:contact"/><br/><br/>
            <lightning:datatable data="{!v.ContactList}" 
                                 columns="{!v.columns}" 
                                 keyField="Id"
                                 hideCheckboxColumn="true"/>
</aura:component>